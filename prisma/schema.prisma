generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  clerkId          String   @unique
  email            String   @unique
  stripeCustomerId String?  @unique

  // Subscription details
  subscriptionId     String?
  subscriptionTier   String?  // "turbo" | "standard" | "reasoning"
  subscriptionStatus String?  // "active" | "trialing" | "canceled" | "past_due"

  // Trial details
  trialEndsAt      DateTime?
  currentPeriodEnd DateTime?

  // Relations
  usageLogs        UsageLog[]
  transcripts      Transcript[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([clerkId])
  @@index([email])
  @@index([stripeCustomerId])
}

model UsageLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  minutes      Int      // Minutes of audio transcribed
  mode         String   // "turbo" | "standard" | "reasoning"
  transcriptId String?  @unique // AssemblyAI transcript ID for deduplication

  createdAt    DateTime @default(now())

  @@index([userId, createdAt])
}

model Transcript {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title      String
  text       String   @db.Text
  fileName   String
  duration   Int      // seconds
  audioUrl   String?  // URL to the audio file
  utterances Json?    // Speaker segments
  chapters   Json?    // Chapter markers
  words      Json?    // Word-level timestamps

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt(sort: Desc)])
}
